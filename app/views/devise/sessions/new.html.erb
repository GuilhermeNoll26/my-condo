<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>My Condo</title>

  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-md-6 ">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Material form login -->
    			  <h5 class="card-header info-color white-text text-center py-4">
    				<strong>Sign in</strong>
    			  </h5>
    
    			  <!--Card content-->
    			  <div class="card-body px-lg-5 pt-0">
    
    				<!-- Form -->
    				<form class="text-center" style="color: #757575;">
    
    				  <!-- Email -->
    				  <div class="md-form"></br>
    				  <%= f.email_field :email, :class => "form-control",autofocus: true, autocomplete: "email" %>
    					<label for="materialLoginFormEmail">E-mail</label>
    				  </div>
    
    				  <!-- Password -->
    				  <div class="md-form">
    				  <%= f.password_field :password, :class => "form-control", autocomplete: "current-password" %>
    					<label for="materialLoginFormPassword">Senha</label>
    				  </div>
    
    				  <div class="d-flex justify-content-around">
    					<div>
    					  <!-- Remember me -->
    					  <div class="form-check">
  					      <% if devise_mapping.rememberable? %>
                    <div class="field">
                      <%= f.check_box :remember_me, :class => "form-check-input" %>
                      <%= f.label :remember_me, :class => "form-check-label" %>
                    </div>
                  <% end %>
    					  </div>
    					</div>
    					<div>
    					</div>
    				  </div>
                <div class="actions">
                  <%= f.submit "Log in", :class =>"btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" %>
                </div>
                <%= render "users/shared/links" %>
    				</form>
    				<!-- Form -->
    			  </div>
			    <!-- Material form login -->
          </div>
        </div>
        <% end %>
      </div>
    </div>

  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="js/sb-admin-2.min.js"></script>

</body>

</html>